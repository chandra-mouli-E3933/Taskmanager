<AddTask> Add Task </AddTask>
{{#if @model}}
    {{#each @model as |task|}}
        <p>
            <LinkTo @route='subtasks' @model={{task.id}} class='taskItem'>{{task.name}} </LinkTo> 
            <LinkTo @route='task' @model={{task}}><button class="task-edit">edit</button></LinkTo>
            <button {{on "click" (fn this.deleteMessage task) }} class="task-delete">Delete</button>
        </p>
    {{/each}}
{{else}}
    <h2>No Tasks</h2>
{{/if}}

